<theme>
   <formatVersion>7</formatVersion>

<view name="system">
      <carousel name="systemcarousel">
        <type>vertical_wheel</type>
        <pos>-0.005 0</pos>
        <size>1 1</size>
        <logoScale>1.2</logoScale>
        <zIndex>41</zIndex>          
        <logoSize>0.20 0.20</logoSize>
        <color>00000000</color>
		<logoRotation>-5.5</logoRotation>
		<logoRotationOrigin>-3.2 0.5</logoRotationOrigin>
		<logoAlignment>left</logoAlignment>
        <maxLogoCount>6</maxLogoCount>
      <zIndex>10</zIndex>
      </carousel>

<text name="systemInfo">
	<glowColor>000000</glowColor>
    <pos>-0.3 0.955</pos>
    <backgroundColor>00000000</backgroundColor>
    <color>ffffff</color>
    <fontPath>./sistema/subtemas/txt/arcade.ttf</fontPath>
	<fontSize>0.028</fontSize>
    <zIndex>20</zIndex>	     
</text> 

	   <helpsystem name="help">
    <fontPath>./sistema/subtemas/txt/arcade.ttf</fontPath>
         <fontSize>0.028</fontSize>
		 <origin>0.5 0.5</origin>
         <pos>0.63 0.98</pos>      
         <textColor>ffffff</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem>

 	  <image name="background3" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./sistema/subtemas/menu/wheel.png</path>
         <zIndex>8</zIndex>          

		<text name="info1, info2, info3, info4, info5, info6, info7, info8, info9, info10, info11, info12" extra="true">
		<visible>false</visible>
		</text>
      </image> 
	  

	<image name="logo">
    <linearSmooth>true</linearSmooth>
	<path>./default/_inc/logo.png</path>
        <path>./sistema/logos3/${system.theme}.png</path>
        <path>./sistema/logos3/${system.theme}.svg</path>
		<path>./sistema/logos3/${system.theme}.jpg</path>

	</image>

	<image name="footer" extra="true">
	 <size>1 0.065</size>
      <pos>0 1.02</pos>
      <origin>0 1</origin>
      <path>./sistema/subtemas/menu/footer.png</path>
      <zIndex>12</zIndex>
	</image> 
</view>
</theme>
